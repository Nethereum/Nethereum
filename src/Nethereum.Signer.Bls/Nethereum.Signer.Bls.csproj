<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <Description>Core BLS abstraction and shared types for pluggable implementations.</Description>
    <AssemblyTitle>Nethereum.Signer.Bls</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <TargetFrameworks>netstandard2.0;net6.0;net8.0;net9.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <AssemblyName>Nethereum.Signer.Bls</AssemblyName>
    <PackageId>Nethereum.Signer.Bls</PackageId>
    <PackageTags>Ethereum;BLS;Consensus;LightClient</PackageTags>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true' And '$(TargetUnityNet472AOT)' != 'true'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\NethereumKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true' And '$(TargetUnityNet472AOT)' != 'true'">
    <None Include="..\..\NethereumKey.snk" />
  </ItemGroup>
</Project>
