<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <Description>Nethereum.Beaconchain - Ethereum Beacon Chain REST API client library for light client, state, and validator endpoints.</Description>
    <AssemblyTitle>Nethereum.Beaconchain</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <TargetFrameworks>$(UIFrameworksBlazor)</TargetFrameworks>
    <OutputType>Library</OutputType>
    <AssemblyName>Nethereum.Beaconchain</AssemblyName>
    <PackageId>Nethereum.Beaconchain</PackageId>
    <PackageTags>Ethereum;Beacon;Consensus;LightClient;REST</PackageTags>
    <LangVersion>Latest</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Nethereum.Util.Rest\Nethereum.Util.Rest.csproj" />
    <ProjectReference Include="..\Nethereum.Hex\Nethereum.Hex.csproj" />
    <ProjectReference Include="..\Nethereum.Consensus.Ssz\Nethereum.Consensus.Ssz.csproj" />
  </ItemGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true' And '$(TargetUnityNet472AOT)' != 'true'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\NethereumKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true' And '$(TargetUnityNet472AOT)' != 'true'">
    <None Include="..\..\NethereumKey.snk" />
  </ItemGroup>
</Project>
