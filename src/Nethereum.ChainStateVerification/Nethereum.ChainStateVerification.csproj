<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <Description>Verified execution-state primitives (account/storage/receipt proofs rooted in the light client).</Description>
    <AssemblyTitle>Nethereum.ChainStateVerification</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <TargetFrameworks>$(UIFrameworksBlazor)</TargetFrameworks>
    <AssemblyName>Nethereum.ChainStateVerification</AssemblyName>
    <PackageId>Nethereum.ChainStateVerification</PackageId>
    <PackageTags>Ethereum;State;Proofs;LightClient</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Nethereum.Consensus.LightClient\Nethereum.Consensus.LightClient.csproj" />
    <ProjectReference Include="..\Nethereum.EVM\Nethereum.EVM.csproj" />
    <ProjectReference Include="..\Nethereum.Model\Nethereum.Model.csproj" />
    <ProjectReference Include="..\Nethereum.Merkle.Patricia\Nethereum.Merkle.Patricia.csproj" />
    <ProjectReference Include="..\Nethereum.RPC\Nethereum.RPC.csproj" />
  </ItemGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true' And '$(TargetUnityNet472AOT)' != 'true'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\NethereumKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true' And '$(TargetUnityNet472AOT)' != 'true'">
    <None Include="..\..\NethereumKey.snk" />
  </ItemGroup>
</Project>
