<Project Sdk="Microsoft.NET.Sdk.Razor">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />

  <PropertyGroup>
    <Description>Reusable wallet UI components, view models, and services for Nethereum applications.</Description>
    <AssemblyTitle>Nethereum.Wallet.UI.Components</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <TargetFrameworks>net9.0</TargetFrameworks>
    <AssemblyName>Nethereum.Wallet.UI.Components</AssemblyName>
    <PackageId>Nethereum.Wallet.UI.Components</PackageId>
    <PackageTags>Nethereum;Ethereum;Wallet;UI;Components</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Nullable>enable</Nullable>
    <InternalsVisibleTo>Nethereum.Wallet.UI.Components.Avalonia</InternalsVisibleTo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nethereum.DataServices\Nethereum.DataServices.csproj" />
    <ProjectReference Include="..\Nethereum.RPC\Nethereum.RPC.csproj" />
    <ProjectReference Include="..\Nethereum.Wallet\Nethereum.Wallet.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ViewModels\NetworkSelectorViewModel.cs">
      <DependentUpon>NetworkSelector.razor</DependentUpon>
    </Compile>
    <Compile Update="AccountFactories\ViewModels\MnemonicAccountCreationViewModel.cs" />
    <Compile Update="AccountFactories\MnemonicAccountFactory.cs" />
    <Compile Update="AccountFactories\ViewModels\PrivateKeyAccountCreationViewModel.cs" />
    <Compile Update="AccountFactories\PrivateKeyAccountFactory.cs" />
    <Compile Update="AccountFactories\ViewModels\ViewOnlyAccountCreationViewModel.cs" />
    <Compile Update="AccountFactories\ViewOnlyAccountFactory.cs" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\NethereumKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true'">
    <None Include="..\..\NethereumKey.snk" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
