<Project Sdk="Microsoft.NET.Sdk.Razor">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />

  <PropertyGroup>
    <Description>MAUI helpers and Blazor WebView integration for hosting Nethereum wallet components on mobile and desktop.</Description>
    <AssemblyTitle>Nethereum.Wallet.UI.Components.Maui</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <AssemblyName>Nethereum.Wallet.UI.Components.Maui</AssemblyName>
    <PackageId>Nethereum.Wallet.UI.Components.Maui</PackageId>
    <PackageTags>Nethereum;Ethereum;Wallet;MAUI;UI</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net9.0-android;net9.0-ios;net9.0-maccatalyst</TargetFrameworks>
    <TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net9.0-windows10.0.19041.0</TargetFrameworks>
    <UseMaui>true</UseMaui>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SingleProject>true</SingleProject>
    <RootNamespace>Nethereum.Wallet.UI.Components.Maui</RootNamespace>
    <EnableDefaultCssItems>false</EnableDefaultCssItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebView.Maui" Version="$(MauiVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.0" />
    <PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nethereum.Wallet.RpcRequests\Nethereum.Wallet.RpcRequests.csproj" />
    <ProjectReference Include="..\Nethereum.Wallet.UI.Components\Nethereum.Wallet.UI.Components.csproj" />
    <ProjectReference Include="..\Nethereum.Wallet\Nethereum.Wallet.csproj" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\NethereumKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true'">
    <None Include="..\..\NethereumKey.snk" />
  </ItemGroup>
</Project>
